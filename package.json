{
  "name": "sflow-payment-gateway",
  "version": "1.0.0",
  "description": "Bitcoin Payment Gateway with multi-layer support",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "cd frontend/sflow && npm install && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend\"",
    "build:frontend": "cd frontend/sflow && npm run build",
    "build": "npm run build:frontend && echo 'Build complete!'",
    "start:prod": " node server.js",
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\""
  },
  "author": "SFlow Team",
  "license": "MIT",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.2",
    "@stacks/transactions": "^7.0.6",
    "axios": "^1.11.0",
    "chokidar-cli": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "uuid": "^9.0.1",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2"
  }
}
